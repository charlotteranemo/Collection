@model Collection.Models.Cd

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cd</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist_Id)
        </dt>
        <dd class="col-sm-10">
            @for (var x = 0; x < Collection.Controllers.CdsController.ArtistDropDown().Count; x++)
            {

                if (Model.Artist_Id.ToString().Equals(Collection.Controllers.CdsController.ArtistDropDown()[x].Value))
                {
                    @Collection.Controllers.CdsController.ArtistDropDown()[x].Text
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
