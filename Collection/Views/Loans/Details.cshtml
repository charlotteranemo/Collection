@model Collection.Models.Loan

@{
    ViewData["Title"] = "Details";
}

@{
    int id = Convert.ToInt32(ViewContext.RouteData.Values["id"]);
}

<h1>Details</h1>

<div>
    <h4>Loan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cd_Id)
        </dt>
        <dd class="col-sm-10">
            @for (var x = 0; x < Collection.Controllers.LoansController.GetCds(id).Count; x++)
            {

                if (Model.Cd_Id.ToString().Equals(Collection.Controllers.LoansController.GetCds(id)[x].Value))
                {
                    @Collection.Controllers.LoansController.GetCds(id)[x].Text
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsReturned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsReturned)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
